<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Task Form View -->
    <record id="view_task_form" model="ir.ui.view">
        <field name="name">project.task.management.form</field>
        <field name="model">project.task.management</field>
        <field name="arch" type="xml">
            <form string="Task">
                <header>
                    <button name="action_mark_as_done" 
                            string="Mark as Done" 
                            type="object" 
                            class="oe_highlight"
                            invisible="is_done"/>
                    <field name="stage_id" widget="statusbar" options="{'clickable': '1'}"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_mark_as_done" 
                                icon="fa-check-circle" invisible="is_done">
                            <div class="o_stat_info">
                                <span class="o_stat_text">Mark</span>
                                <span class="o_stat_text">Done</span>
                            </div>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name" placeholder="e.g., Design Homepage"/>
                            <field name="project_id"/>
                            <field name="user_id"/>
                            <field name="priority" widget="priority"/>
                        </group>
                        <group>
                            <field name="date_start"/>
                            <field name="date_deadline"/>
                            <field name="date_completed" invisible="not date_completed"/>
                            <field name="progress" widget="progressbar"/>
                            <field name="is_done" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description" placeholder="Task description..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Task Tree View -->
    <record id="view_task_tree" model="ir.ui.view">
        <field name="name">project.task.management.tree</field>
        <field name="model">project.task.management</field>
        <field name="arch" type="xml">
            <tree string="Tasks" decoration-success="is_done" decoration-danger="date_deadline and date_deadline &lt; current_date and not is_done">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="project_id"/>
                <field name="user_id"/>
                <field name="stage_id"/>
                <field name="priority" widget="priority"/>
                <field name="date_deadline"/>
                <field name="date_completed"/>
                <field name="is_done" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Task Kanban View -->
    <record id="view_task_kanban" model="ir.ui.view">
        <field name="name">project.task.management.kanban</field>
        <field name="model">project.task.management</field>
        <field name="arch" type="xml">
            <kanban default_group_by="stage_id" class="o_kanban_small_column">
                <field name="name"/>
                <field name="user_id"/>
                <field name="stage_id"/>
                <field name="priority"/>
                <field name="is_done"/>
                <field name="date_deadline"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title"><field name="name"/></strong>
                                </div>
                                <div class="o_kanban_record_subtitle">
                                    <field name="project_id"/>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <field name="priority" widget="priority"/>
                                <field name="date_deadline" widget="date"/>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <field name="user_id" widget="many2one_avatar_user"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Task Action -->
    <record id="action_task" model="ir.actions.act_window">
        <field name="name">Tasks</field>
        <field name="res_model">project.task.management</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first task
            </p>
        </field>
    </record>
</odoo>
