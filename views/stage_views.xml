<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Stage Tree View -->
    <record id="view_stage_tree" model="ir.ui.view">
        <field name="name">project.task.stage.tree</field>
        <field name="model">project.task.stage</field>
        <field name="arch" type="xml">
            <tree string="Stages" editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="is_done"/>
                <field name="fold"/>
            </tree>
        </field>
    </record>

    <!-- Stage Form View -->
    <record id="view_stage_form" model="ir.ui.view">
        <field name="name">project.task.stage.form</field>
        <field name="model">project.task.stage</field>
        <field name="arch" type="xml">
            <form string="Stage">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="sequence"/>
                        <field name="is_done"/>
                        <field name="fold"/>
                    </group>
                    <group string="Description">
                        <field name="description" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Stage Action -->
    <record id="action_stage" model="ir.actions.act_window">
        <field name="name">Stages</field>
        <field name="res_model">project.task.stage</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
