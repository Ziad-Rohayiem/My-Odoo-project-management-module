<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Default Stages -->
        <record id="stage_new" model="project.task.stage">
            <field name="name">New</field>
            <field name="sequence">1</field>
            <field name="is_done" eval="False"/>
        </record>

        <record id="stage_in_progress" model="project.task.stage">
            <field name="name">In Progress</field>
            <field name="sequence">2</field>
            <field name="is_done" eval="False"/>
        </record>

        <record id="stage_review" model="project.task.stage">
            <field name="name">Review</field>
            <field name="sequence">3</field>
            <field name="is_done" eval="False"/>
        </record>

        <record id="stage_done" model="project.task.stage">
            <field name="name">Done</field>
            <field name="sequence">4</field>
            <field name="is_done" eval="True"/>
            <field name="fold" eval="True"/>
        </record>
    </data>
</odoo>
